@page "/registration"

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100vh; /* Фиксированная высота страницы */
        overflow: hidden; /* Убираем прокрутку */
    }

    .bg-green {
        background-color: green;
    }

    .gradient-custom-3 {
        background: linear-gradient(to bottom, #f0f0f0, #e0e0e0);
    }

    .main-content {
        height: 100%;
    }

    .container {
        width: 100%;
        max-width: 1500px;
        padding: 10px; /* Уменьшен отступ */
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .form-control {
        font-size: 0.9rem; /* Уменьшен размер шрифта */
    }

    h2 {
        font-size: 1.5rem; /* Уменьшен размер заголовка */
    }

    .btn-link {
        font-size: 0.9rem; /* Уменьшен размер кнопки */
    }

    .text-muted {
        font-size: 0.8rem; /* Уменьшен размер текста */
    }
</style>

<section class="bg-green">
    <div class="mask d-flex align-items-center gradient-custom-3 vw-100 vh-100 main-content">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/" class="btn btn-link text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Вернуться на главную
                </a>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card border shadow p-3 mb-3 bg-white">
                        <div class="card-body">
                            <h2 class="text-center mb-3">Создать аккаунт</h2>
                            <form>
                                <div class="form-group mb-3 text-start">
                                    <label for="username"><b>Логин</b></label>
                                    <input type="text" class="form-control" id="username" placeholder="Введите логин">
                                </div>
                                <div class="form-group mb-3 text-start">
                                    <label for="firstName"><b>Имя</b></label>
                                    <input type="text" class="form-control" id="firstName" placeholder="Иван">
                                </div>
                                <div class="form-group mb-3 text-start">
                                    <label for="lastName"><b>Фамилия</b></label>
                                    <input type="text" class="form-control" id="lastName" placeholder="Иванов">
                                </div>
                                <div class="form-group mb-3 text-start">
                                    <label for="email"><b>Почта</b></label>
                                    <input type="email" class="form-control" id="email" placeholder="example@mail.com">
                                </div>
                                <div class="form-group mb-3 text-start">
                                    <label for="password"><b>Пароль</b></label>
                                    <input type="password" class="form-control" id="password" placeholder="Введите пароль">
                                </div>
                                <div class="form-group mb-3 text-start">
                                    <label for="confirmPassword"><b>Подтверждение пароля</b></label>
                                    <input type="password" class="form-control" id="confirmPassword" placeholder="Подтвердите пароль">
                                </div>
                                <div class="form-group form-check mb-3 text-start">
                                    <input type="checkbox" class="form-check-input" id="acceptTerms">
                                    <label class="form-check-label" for="acceptTerms"><b>Принять условия</b></label>
                                </div>
                                <div class="w-100 d-flex justify-content-center">
                                    <button type="button" class="btn btn-primary mt-auto">Зарегистрироваться</button>
                                </div>
                                <p class="text-center text-muted mt-2 mb-0">
                                    Уже есть аккаунт? <a href="/login" class="fw-bold text-body"><u>Вход</u></a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>